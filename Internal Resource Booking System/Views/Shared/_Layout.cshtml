<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="Internal Resource Booking System for efficient resource management">
    <title>@ViewData["Title"] - Internal Resource Booking System</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        body {
            background-color: white;
        }

        .header {
            background: linear-gradient(to right, #100f1f, #000000);
            color: goldenrod;
            padding: 1.5rem 2rem;
            box-shadow: 0 4px 8px rgba(0, 225, 0, 0.2);
        }

            .header h1 {
                font-size: 1.75rem;
                font-weight: 600;
                text-transform: uppercase;
                letter-spacing: 1px;
            }

            .header img {
                height: 40px;
                width: auto;
                filter: brightness(0) invert(1);
            }

        .navbar-dark .nav-link {
            color: #f8f9fa;
            transition: color 0.3s ease;
        }

            .navbar-dark .nav-link:hover {
                color: #ffffff;
            }

        .content-area {
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
            padding: 30px;
            margin-top: 30px;
            min-height: 80vh;
        } 

       /*  .content-area {
            background-color: #ffffff;
            border-radius: 0;
            box-shadow: none; 
            padding: 30px;
            margin: 0; 
            min-height: 80vh;
            width: 100vw; 
            max-width: 100%;
        } */

        .content-area {
            padding: 30px;
            margin: 0;
            width: 100vw; 
            max-width: 100%;
        }


        .navbar-dark .navbar-nav .nav-link,
        .navbar-dark .navbar-brand {
            color: white !important;
        }
        footer {
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            z-index: 999; 
            background: linear-gradient(to right, #100f1f, #000000);
            color: white;
            padding: 1rem;
        }

            footer a {
                color: #ffc107;
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }

    </style>
</head>
<body>
    
    <header class="header d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center gap-3">
            <img src="https://cdn.iconscout.com/icon/free/png-256/briefcase-1851640-1569371.png" alt="IRBS Logo" />
            <h1>Internal Resource Booking System</h1>
        </div>
    </header>


    <nav class="navbar navbar-expand-lg navbar-dark" style="background: linear-gradient(to right, #100f, #000000);">

        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">IRBS</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMenu">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarMenu">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="viewDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Manage Resources
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="viewDropdown">
                            <li><a class="dropdown-item" asp-controller="Home" asp-action="CreateResource">Add Resource</a></li>
                            <li><a class="dropdown-item" asp-controller="Home" asp-action="ResourceList">View Resources</a></li>
                      
                        </ul>
                    </li>

                   
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="addDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Manage Bookings
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="addDropdown">
                            <li><a class="dropdown-item" asp-controller="Home" asp-action="AddBookings">Add Booking</a></li>
                            <li><a class="dropdown-item" asp-controller="Home" asp-action="AllBookings">View Bookings</a></li>
                        </ul>
                    </li>

                 
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="AllBookings">All Bookings</a>
                    </li>
                   
                </ul>
            </div>
        </div>
    </nav>

  
    <div class="container">
        <main class="content-area">
            <header class="mb-4">
                <h2 class="h5">@ViewData["Title"]</h2>
            </header>

            @RenderBody()

            @if (ViewData["Title"]?.ToString() == "Home")
            {
              
            }
        </main>
    </div>


    <footer class="text-center py-3 mt-4">
        <div class="container">
            <p class="mb-1">© 2025 - Internal Resource Booking System</p>
          
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
