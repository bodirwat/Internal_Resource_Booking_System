
@model Internal_Resource_Booking_System.Models.ResourceDetailsViewModel



<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<style>
    .table-container {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .table-container:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15) !important;
        }

    .modal-content {
        border: none;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        animation: fadeIn 0.3s ease;
    }

    .btn-animate {
        transition: transform 0.2s ease;
    }

        .btn-animate:hover {
            transform: scale(1.05);
        }

    .icon-pulse {
        display: inline-block;
        animation: pulse 1.5s infinite;
    }

    .table th, .table td {
        vertical-align: middle;
    }

    .badge {
        font-size: 0.9em;
    }

    @@keyframes pulse {
        0% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.2);
        }

        100% {
            transform: scale(1);
        }
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: scale(0.95);
        }

        to {
            opacity: 1;
            transform: scale(1);
        }
    }
</style>

<h2 class="mb-4 fw-bold">
    <i class="fas fa-calendar-check text-primary me-2 icon-pulse"></i>All Bookings
</h2>

<!--======================================= Success and Error Alerts============================================================================= -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (!ViewData.ModelState.IsValid && ViewData.ModelState.Any())
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>
        <ul class="mb-0">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow-sm p-4 bg-light table-container">
    <div class="table-responsive">
        <table id="bookingsTable" class="table table-striped table-hover table-bordered align-middle" style="width:100%">
            <thead class="table-dark">
                <tr>
                    <th><i class="fas fa-tag text-primary me-2"></i>Booking ID</th>
                    <th><i class="fas fa-building text-primary me-2"></i>Resource Name</th>
                    <th><i class="fas fa-align-left text-primary me-2"></i>Resource Description</th>
                    <th><i class="fas fa-map-marker-alt text-primary me-2"></i>Resource Location</th>
                    <th><i class="fas fa-users text-primary me-2"></i>Resource Capacity</th>
                    <th><i class="fas fa-check-circle text-primary me-2"></i>Resource Available</th>
                    <th><i class="fas fa-user text-primary me-2"></i>Booked By</th>
                    <th><i class="fas fa-calendar-alt text-primary me-2"></i>Start Time</th>
                    <th><i class="fas fa-calendar-alt text-primary me-2"></i>End Time</th>
                    <th><i class="fas fa-file-alt text-primary me-2"></i>Purpose</th>
                    <th><i class="fas fa-cog text-primary me-2"></i>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Bookings == null || !Model.Bookings.Any())
                {
                    <tr>
                        <td colspan="11" class="text-center text-muted">
                            <i class="fas fa-info-circle me-2"></i>No bookings available.
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var booking in Model.Bookings)
                    {
                        <tr>
                            <td>@booking.Id</td>
                            <td>@(booking.Resource?.Name ?? "N/A")</td>
                            <td>@(string.IsNullOrEmpty(booking.Resource?.Description) ? "N/A" : booking.Resource.Description.Length > 50 ? booking.Resource.Description.Substring(0, 50) + "..." : booking.Resource.Description)</td>
                            <td>@(booking.Resource?.Location ?? "N/A")</td>
                            <td>@(booking.Resource?.Capacity ?? 0)</td>
                            <td>
                                @if (booking.Resource?.IsAvailable ?? false)
                                {
                                    <span class="badge bg-success" data-bs-toggle="tooltip" title="Resource is available">
                                        <i class="fas fa-check me-1"></i>Yes
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-danger" data-bs-toggle="tooltip" title="Resource is not available">
                                        <i class="fas fa-times me-1"></i>No
                                    </span>
                                }
                            </td>
                            <td>@(booking.BookedBy ?? "N/A")</td>
                            <td>@booking.StartTime.ToString("MMM dd, yyyy HH:mm")</td>
                            <td>@booking.EndTime.ToString("MMM dd, yyyy HH:mm")</td>
                            <td>@(string.IsNullOrEmpty(booking.Purpose) ? "No purpose provided" : booking.Purpose.Length > 50 ? booking.Purpose.Substring(0, 50) + "..." : booking.Purpose)</td>
                            <td>
                                <div class="btn-group" role="group">
                                   
                                    <button class="btn btn-sm btn-danger btn-animate delete-btn"
                                            data-bs-toggle="modal"
                                            data-bs-target="#deleteBookingModal"
                                            data-id="@booking.Id"
                                            data-resource="@(booking.Resource?.Name ?? "N/A")"
                                            data-bookedby="@(booking.BookedBy ?? "N/A")"
                                            data-startdate="@booking.StartTime.ToString("MMM dd, yyyy HH:mm")"
                                            data-enddate="@booking.EndTime.ToString("MMM dd, yyyy HH:mm")">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <div class="mt-3">
        <a asp-action="AddBookings" asp-controller="Home" class="btn btn-primary btn-lg btn-animate">
            <i class="fas fa-plus-circle me-2"></i>Create New Booking
        </a>
    </div>
</div>

<!-- =========================================Delete Confirmation Modal===================================================== -->
<div class="modal fade" id="deleteBookingModal" tabindex="-1" aria-labelledby="deleteBookingModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteBookingModalLabel">
                    <i class="fas fa-trash-alt me-2"></i>Delete Booking
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-3">
                    <i class="fas fa-exclamation-circle text-danger me-2"></i>
                    Are you sure you want to delete the following booking?
                </p>
                <div class="card bg-light p-3">
                    <p class="mb-1"><strong><i class="fas fa-tag text-primary me-2"></i>Booking ID:</strong> <span id="bookingId">N/A</span></p>
                    <p class="mb-1"><strong><i class="fas fa-building text-primary me-2"></i>Resource:</strong> <span id="bookingResource">N/A</span></p>
                    <p class="mb-1"><strong><i class="fas fa-user text-primary me-2"></i>Booked By:</strong> <span id="bookingBookedBy">N/A</span></p>
                    <p class="mb-1"><strong><i class="fas fa-calendar-alt text-primary me-2"></i>Start Date:</strong> <span id="bookingStartDate">N/A</span></p>
                    <p class="mb-0"><strong><i class="fas fa-calendar-alt text-primary me-2"></i>End Date:</strong> <span id="bookingEndDate">N/A</span></p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary btn-animate" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Cancel
                </button>
                <button type="button" class="btn btn-danger btn-animate confirm-delete-btn" data-bs-toggle="modal" data-bs-target="#confirmDeleteBookingModal">
                    <i class="fas fa-trash-alt me-2"></i>Delete
                </button>
            </div>
        </div>
    </div>
</div>
<!-- =========================================Delete Confirmation Modal===================================================== -->
<!-- ============================================Final Confirmation Modal=================================================== -->
<div class="modal fade" id="confirmDeleteBookingModal" tabindex="-1" aria-labelledby="confirmDeleteBookingModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title" id="confirmDeleteBookingModalLabel">
                    <i class="fas fa-exclamation-triangle me-2"></i>Confirm Deletion
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>
                    <i class="fas fa-exclamation-circle text-warning me-2"></i>
                    This action cannot be undone. Do you want to permanently delete the booking for <strong><span id="confirmBookingResource">N/A</span></strong>?
                </p>
            </div>
            <div class="modal-footer">
                <form id="deleteBookingForm" asp-action="DeleteBooking" asp-controller="Home" method="post">
                    <input type="hidden" name="id" id="bookingIdToDelete" />
                    <button type="submit" class="btn btn-danger btn-animate">
                        <i class="fas fa-trash-alt me-2"></i>Confirm Delete
                    </button>
                    <button type="button" class="btn btn-outline-secondary btn-animate" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Cancel
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- ============================================Final Confirmation Modal=================================================== -->
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function () {
           
            $('[data-bs-toggle="tooltip"]').tooltip();

           
            $('#bookingsTable').DataTable({
                order: [[7, 'asc']], 
                pageLength: 4,
                responsive: true,
                language: {
                    emptyTable: "No bookings available.",
                    search: '<i class="fas fa-search me-2"></i>Search:',
                    lengthMenu: 'Show _MENU_ entries',
                    info: 'Showing _START_ to _END_ of _TOTAL_ bookings'
                },
                columnDefs: [
                    { targets: 10, orderable: false }
                ]
            });

            //============================ Populate delete modal and store data for confirmation modal=====================================
            $('.delete-btn').on('click', function () {
                const button = $(this);
                const id = button.data('id') || 'N/A';
                const resource = button.data('resource') || 'N/A';
                const bookedBy = button.data('bookedby') || 'N/A';
                const startDate = button.data('startdate') || 'N/A';
                const endDate = button.data('enddate') || 'N/A';

                // ================Populate delete modal======================================
                $('#bookingIdToDelete').val(id);
                $('#bookingId').text(id);
                $('#bookingResource').text(resource);
                $('#bookingBookedBy').text(bookedBy);
                $('#bookingStartDate').text(startDate);
                $('#bookingEndDate').text(endDate);

             
                $('.confirm-delete-btn').data('resource', resource);
            });

           
            $('.confirm-delete-btn').on('click', function () {
                const resource = $(this).data('resource') || 'N/A';
                $('#confirmBookingResource').text(resource);
            });

          
            $('#deleteBookingModal, #confirmDeleteBookingModal').on('hidden.bs.modal', function () {
                $('body').removeClass('modal-open');
                $('.modal-backdrop').remove();
            });
        });
    </script>
}
