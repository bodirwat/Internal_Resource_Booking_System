<!-- =================================================Resource Delete Confirmation Modal=========================================================== -->
<div class="modal fade" id="deleteResourceModal" tabindex="-1" aria-labelledby="deleteResourceModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteResourceModalLabel">
                    <i class="fas fa-trash-alt me-2"></i>Delete Resource
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-3">
                    <i class="fas fa-exclamation-circle text-danger me-2"></i>
                    Are you sure you want to delete the following resource?
                </p>
                <div class="card bg-light p-3">
                    <p class="mb-1"><strong><i class="fas fa-tag text-primary me-2"></i>Name:</strong> @Model.Resource.Name</p>
                    <p class="mb-1"><strong><i class="fas fa-map-marker-alt text-primary me-2"></i>Location:</strong> @(Model.Resource.Location ?? "N/A")</p>
                    <p class="mb-1"><strong><i class="fas fa-users text-primary me-2"></i>Capacity:</strong> @Model.Resource.Capacity</p>
   
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary btn-animate" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Cancel
                </button>
                <button type="button" class="btn btn-danger btn-animate" data-bs-toggle="modal" data-bs-target="#confirmDeleteResourceModal">
                    <i class="fas fa-trash-alt me-2"></i>Delete
                </button>
            </div>
        </div>
    </div>
</div>
<!-- =================================================Resource Delete Confirmation Modal=========================================================== -->

<!-- ====================================================Resource Final Confirmation Modal========================================================== -->
<div class="modal fade" id="confirmDeleteResourceModal" tabindex="-1" aria-labelledby="confirmDeleteResourceModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title" id="confirmDeleteResourceModalLabel">
                    <i class="fas fa-exclamation-triangle me-2"></i>Confirm Deletion
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>
                    <i class="fas fa-exclamation-circle text-warning me-2"></i>
                    This action cannot be undone. Do you want to permanently delete <strong>@Model.Resource.Name</strong>?
                </p>
            </div>
            <div class="modal-footer">
                <form id="deleteResourceForm" asp-action="Delete" asp-controller="Home" method="post">
                    <input type="hidden" name="id" value="@Model.Resource.Id" />
                    <button type="submit" class="btn btn-danger btn-animate">
                        <i class="fas fa-trash-alt me-2"></i>Confirm Delete
                    </button>
                    <button type="button" class="btn btn-outline-secondary btn-animate" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Cancel
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- ====================================================Resource Final Confirmation Modal========================================================== -->

