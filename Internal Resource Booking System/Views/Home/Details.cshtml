            <!--===========================================bookings Details on datatable for one resource================================================================ -->
    <h4 class="mb-4 fw-bold">
        <i class="fas fa-calendar-check text-primary me-2 icon-pulse"></i>Upcoming Bookings
    </h4>
    <div class="table-responsive">
        <table id="bookingsTable" class="table table-striped table-hover table-bordered align-middle" style="width:100%">
            <thead class="table-dark">
                <tr>
                    <th scope="col"><i class="fas fa-user text-primary me-2"></i>Booked By</th>
                    <th scope="col"><i class="fas fa-calendar-alt text-primary me-2"></i>Start Date</th>
                    <th scope="col"><i class="fas fa-calendar-alt text-primary me-2"></i>End Date</th>
                    <th scope="col"><i class="fas fa-file-alt text-primary me-2"></i>Purpose</th>
                    <th scope="col"><i class="fas fa-cog text-primary me-2"></i>Actions</th>
                </tr>
            </thead>
            <tbody>



                @{
                    //===========================================================================================
                            // Get the current date and time
                            // Get upcoming bookings (those starting at or after now)
                            // Check if Model.Bookings is not null
                            // Filter  only bookings starting in the future or now
                            // Sort them by start time 
                //===========================================================================================

                    var now = DateTime.Now;

                    var upcomingBookings = Model.Bookings?
                    .Where(b => b.StartTime >= now)
                    .OrderBy(b => b.StartTime)
                    ?? Enumerable.Empty<Internal_Resource_Booking_System.Models.Booking>();
                }
                @if (!upcomingBookings.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted">
                            <i class="fas fa-info-circle me-2"></i>No upcoming bookings for this resource.
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var item in upcomingBookings)
                    {
                        <tr>
                            <td>@(item.BookedBy ?? "N/A")</td>
                            <td>@item.StartTime.ToString("MMM dd, yyyy HH:mm")</td>
                            <td>@item.EndTime.ToString("MMM dd, yyyy HH:mm")</td>
                            <td>@(string.IsNullOrEmpty(item.Purpose) ? "No purpose provided" : item.Purpose.Length > 50 ? item.Purpose.Substring(0, 50) + "..." : item.Purpose)</td>
                            <td>
                                <div class="btn-group" role="group">
                                            <a asp-action="EditBookings" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-warning btn-lg btn-animate" data-bs-toggle="tooltip" title="Edit this booking">
                                                <i class="fas fa-edit me-1"></i>Edit
                                            </a>
                                    <button class="btn btn-sm btn-danger btn-animate delete-btn"
                                            data-bs-toggle="modal"
                                            data-bs-target="#deleteBookingModal"
                                            data-id="@item.Id"
                                            data-resource="@Model.Resource.Name"
                                            data-bookedby="@(item.BookedBy ?? "N/A")"
                                            data-startdate="@item.StartTime.ToString("MMM dd, yyyy HH:mm")"
                                            data-enddate="@item.EndTime.ToString("MMM dd, yyyy HH:mm")">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <div class="mt-3">
        <a asp-action="AddBookings" asp-controller="Home" asp-route-resourceId="@Model.Resource.Id" class="btn btn-primary btn-lg btn-animate">
            <i class="fas fa-plus-circle me-2"></i>Create New Booking
        </a>
    </div>
</div>
</div>
</div>
