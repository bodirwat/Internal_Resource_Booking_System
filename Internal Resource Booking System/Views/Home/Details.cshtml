@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function () {
         
            $('[data-bs-toggle="tooltip"]').tooltip();

            $('#bookingsTable').DataTable({
                //order: [[1, 'asc']], 
                pageLength: 3,
                responsive: true,
                language: {
                    emptyTable: "No bookings available.",
                    search: '<i class="fas fa-search me-2"></i>Search:',
                    lengthMenu: 'Show _MENU_ entries',
                    info: 'Showing _START_ to _END_ of _TOTAL_ bookings'
                },
                columnDefs: [
                    { targets: 4, orderable: false } 
                ]
            });

            // ============================Populate delete modal and store data for confirmation modal=================================================
            $('.delete-btn').on('click', function () {
                const button = $(this);
                const id = button.data('id') || 'N/A';
                const resource = button.data('resource') || 'N/A';
                const bookedBy = button.data('bookedby') || 'N/A';
                const startDate = button.data('startdate') || 'N/A';
                const endDate = button.data('enddate') || 'N/A';

       
                $('#bookingIdToDelete').val(id);
                $('#bookingId').text(id);
                $('#bookingResource').text(resource);
                $('#bookingBookedBy').text(bookedBy);
                $('#bookingStartDate').text(startDate);
                $('#bookingEndDate').text(endDate);

            
                $('.confirm-delete-btn').data('resource', resource);
            });

      
            $('.confirm-delete-btn').on('click', function () {
                const resource = $(this).data('resource') || 'N/A';
                $('#confirmBookingResource').text(resource);
            });

            $('#deleteBookingModal, #confirmDeleteBookingModal').on('hidden.bs.modal', function () {
                $('body').removeClass('modal-open');
                $('.modal-backdrop').remove();
            });
        });
    </script>
}
<script>
    $(document).ready(function () {
        // Attach global DataTables error handler
        $('#bookingsTable').on('error.dt', function (e, settings, techNote, message) {
            // Replace with your own modal or nicer popup if you prefer
            alert("A table error occurred: " + message + "\nPlease check the column count or data format.");
            console.error('DataTables Error:', message); // For dev console
        });

        // Initialize the DataTable
        $('#bookingsTable').DataTable();
    });
</script>























