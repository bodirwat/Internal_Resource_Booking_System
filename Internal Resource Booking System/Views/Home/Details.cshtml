
@model Internal_Resource_Booking_System.Models.ResourceDetailsViewModel



<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>
    .detail-card, .table-container {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .detail-card:hover, .table-container:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15) !important;
        }

    .detail-item {
        border-left: 4px solid #0d6efd;
        padding-left: 15px;
        margin-bottom: 15px;
        transition: border-color 0.3s ease;
    }

        .detail-item:hover {
            border-color: #28a745;
        }

    .detail-icon {
        width: 24px;
        text-align: center;
        margin-right: 10px;
    }

    .btn-animate {
        transition: transform 0.2s ease;
    }

        .btn-animate:hover {
            transform: scale(1.05);
        }

    .icon-pulse {
        display: inline-block;
        animation: pulse 1.5s infinite;
    }

    .modal-content {
        border: none;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        animation: fadeIn 0.3s ease;
    }

    @@keyframes pulse {
        0% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.2);
        }

        100% {
            transform: scale(1);
        }
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: scale(0.95);
        }

        to {
            opacity: 1;
            transform: scale(1);
        }
    }
</style>

<h2 class="mb-4 fw-bold">
    <i class="fas fa-info-circle text-primary me-2 icon-pulse"></i> Resource Details
</h2>

<!-- Success and Error Alerts -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>
        <ul class="mb-0">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!--===========================================Resource Details================================================================ -->
<div class="row">
<div class="col-md-4">
<div class="card shadow-sm p-4 bg-light detail-card mb-4">
    <div class="card-body">
        <h4 class="card-title mb-4 fw-bold">
            <i class="fas fa-tag text-primary me-2 icon-pulse"></i>@Model.Resource.Name
        </h4>
        <div class="detail-item">
            <strong><i class="fas fa-align-left text-primary detail-icon"></i>Description:</strong>
            <p class="mb-0">@(string.IsNullOrEmpty(Model.Resource.Description) ? "No description provided" : Model.Resource.Description)</p>
        </div>
        <div class="detail-item">
            <strong><i class="fas fa-map-marker-alt text-primary detail-icon"></i>Location:</strong>
            <p class="mb-0">@(Model.Resource.Location ?? "N/A")</p>
        </div>
        <div class="detail-item">
            <strong><i class="fas fa-users text-primary detail-icon"></i>Capacity:</strong>
            <p class="mb-0">@Model.Resource.Capacity</p>
        </div>
      
        <div class="detail-item">
            <strong><i class="fas fa-check-circle text-primary detail-icon"></i>Available:</strong>
            <p class="mb-0">
                @if (Model.Resource.IsAvailable)
                {
                    <span class="badge bg-success" data-bs-toggle="tooltip" title="Resource is available for booking">
                        <i class="fas fa-check me-1"></i>Yes
                    </span>
                }
                else
                {
                    <span class="badge bg-danger" data-bs-toggle="tooltip" title="Resource is not available">
                        <i class="fas fa-times me-1"></i>No
                    </span>
                }
            </p>
        </div>
        <div class="d-flex gap-2 mt-4">
            <a asp-action="EditResource" asp-controller="Home" asp-route-id="@Model.Resource.Id" class="btn btn-warning btn-lg btn-animate" data-bs-toggle="tooltip" title="Edit this resource">
                <i class="fas fa-edit me-1"></i>Edit
            </a>
            <a asp-action="ResourceList" asp-controller="Home" class="btn btn-outline-secondary btn-lg btn-animate" data-bs-toggle="tooltip" title="Return to resources list">
                <i class="fas fa-arrow-left me-1"></i>List
            </a>
            <button type="button" class="btn btn-danger btn-lg btn-animate" data-bs-toggle="modal" data-bs-target="#deleteResourceModal" data-bs-toggle="tooltip" title="Delete this resource">
                <i class="fas fa-trash-alt me-1"></i>Delete
            </button>
           



        </div>
    </div>
</div>
</div>
<div class="col-md-8">
<div class="card shadow-sm p-4 bg-light table-container">

